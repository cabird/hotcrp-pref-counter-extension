{
  "manifest_version": 3,
  "name": "HotCRP Bid/Preference Counter",
  "version": "1.0.7",
  "description": "Counts the number of positive bids/preferences when on the HotCRP Bidding Preferences page",
  "content_scripts": [
    {
      "matches": [
        "*://*.hotcrp.com/reviewprefs*",
        "*://*.hotcrp.com/*/reviewprefs*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }  
}

